{
  "name": "torrent-control",
  "version": "0.1.0",
  "repository": "git@github.com:Mika-/torrent-control.git",
  "license": "MIT",
  "scripts": {
    "start": "rollup -c --watch",
    "build": "rollup -c",
    "bundle": "rollup -c && web-ext build --source-dir ./dist/",
    "test": "mocha --require @babel/register 'test/**/*.js'",
    "webext": "web-ext run --source-dir ./dist/",
    "webext:dev": "web-ext run --firefox=firefoxdeveloperedition --source-dir ./dist/"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/register": "^7.9.0",
    "@rollup/plugin-babel": "^5.0.0",
    "chai": "^4.2.0",
    "fetch-mock": "^9.10.1",
    "mocha": "^7.0.0",
    "node-fetch": "^2.6.0",
    "rewire": "^5.0.0",
    "rollup": "^2.10.2",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-multi-input": "^1.1.1",
    "sinon-chrome": "^3.0.1",
    "web-ext": "^4.0.0"
  },
  "browserslist": [
    "Firefox ESR"
  ]
}
